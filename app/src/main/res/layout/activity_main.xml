<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cars"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Texto_1"
        android:layout_width="411dp"
        android:layout_height="143dp"

        android:gravity="center"
        android:text="Tarea Carrito"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf=" parent
"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />

    <TableLayout
        android:layout_width="408dp"
        android:layout_height="175dp"
        android:layout_marginTop="188dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <Button
                android:id="@+id/Boton_cambio"
                android:layout_width="137dp"
                android:layout_height="63dp"

                android:backgroundTint="#03A9F4"
                android:onClick="segunda_pantalla"
                android:text="Pagina Siguiente"
                app:iconTint="#2196F3"
                app:rippleColor="#03A9F4" />

            <Space
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/Boton_inicio"
                android:layout_width="137dp"
                android:layout_height="63dp"
                android:backgroundTint="#03A9F4"
                android:text="Pagina Inicio"
                app:iconTint="#2196F3"
                app:rippleColor="#03A9F4" />

            android:text="Button" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>